---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Taller intensivo de programación de videojuegos web para niños y adolescentes en Punta Arenas. De jugador a creador.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>

  <body class="bg-jules-bg text-jules-primary antialiased selection:bg-jules-accent selection:text-white overflow-x-hidden min-h-screen relative">
    <!-- Jules scene layers -->
    <div class="jules-scene"></div>
    <div class="jules-scene-glow"></div>
    <div class="jules-scene-grid"></div>

    <!-- Pixel islands + corner island -->
    <div class="jules-scene-islands"></div>
    <div class="jules-scene-corner"></div>

    <!-- Diagonal band -->
    <div class="jules-scene-diagonal"></div>

    <!-- Vignette -->
    <div class="jules-scene-vignette"></div>

    <!-- Scanlines -->
    <div class="scanline"></div>

    <slot />
  </body>
</html>

